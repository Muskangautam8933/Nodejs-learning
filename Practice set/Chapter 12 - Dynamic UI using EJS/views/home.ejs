<%- include('partials/head') %>
  </head>
  <body class="bg-gray-100">
    <%- include('partials/nav') %>
    <main class="container mx-auto p-8 max-w-7xl">
      <h2 class="text-3xl text-red-500 font-bold text-center mb-10">
        Here are our registered homes:
      </h2>

      <!-- Grid Layout -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% registeredHomes.forEach(home => { %>
          <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl hover:scale-105 transform transition duration-300">
            
            <!-- Dynamic Image with fallback -->
            <img src="<%= home.photoUrl || 'https://via.placeholder.com/400x300?text=No+Image' %>" 
                 alt="<%= home.houseName %>" 
                 class="w-full h-56 object-cover">

            <!-- Card Content -->
            <div class="p-5">
              <!-- House Name -->
              <h3 class="text-xl font-semibold text-gray-800 mb-2">
                <%= home.houseName %>
              </h3>

              <!-- Location -->
              <p class="text-gray-600 mb-3 flex items-center">
                <i class="fas fa-map-marker-alt mr-2 text-red-500"></i>
                <%= home.location %>
              </p>

              <div class="flex justify-between items-center">
                <!-- Price -->
                <span class="text-lg font-bold text-red-500">
                  â‚¹<%= home.price %> / night
                </span>

                <!-- Rating -->
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" 
                       viewBox="0 0 24 24" 
                       fill="currentColor" 
                       class="w-5 h-5 text-yellow-400 mr-1">
                    <path fill-rule="evenodd" 
                          d="M10.788 3.21c.448-1.077 
                          1.976-1.077 2.424 0l2.082 5.007 
                          5.404.433c1.164.093 1.636 1.545.749 
                          2.305l-4.117 3.527 1.257 5.273c.271 
                          1.136-.964 2.033-1.96 
                          1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 
                          2.082-5.006z" 
                          clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700 font-medium">
                   <h1> <%= home.rating %></h1>
                  </span>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
